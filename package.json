{
    "name": "GameOfLife-Colors",
    "version": "1.0.0",
    "description": "Conway's Game of Life with a a colorful twist",
    "dependencies": {
        "http-server": "^0.8.0"
    },
    "devDependencies": {
        "typescript": "^2.5.0"
    },
    "scripts": {
        "tsc": "node node_modules/typescript/lib/tsc.js",
        "browserify": "browserify src/app.js -o bundle.js -s app",
        "listen": "node node_modules/http-server/bin/http-server",
        "all": "npm run tsc &&  npm run browserify && npm run listen"
    }
}
